#(stackcard.kv)
<TitleLabel@Label>:
    #pos_hint_y: None
    font_size: 5
    font_name: 'Verdana'
    canvas.before:
        Color:
            rgba: 0, 1, 0, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30, ]

<SmoothButton@Button>:
    background_color:(0,0,0,0)
    background_normal:''
    back_color: (0.565, 0.557, 0.698,0.8)
    border_radius:[0,35,0,35]
    #font_name:'verdana'
    canvas.before:
        Color:
            rgba:self.back_color
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:self.border_radius
#Test:
<Test>:
    orientation: 'vertical'
    rv: rv
    BoxLayout: #All Screen
        orientation: "vertical"
        size_hint_y: 0.45
        canvas.after:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                rectangle: self.x+1,self.y+1,self.width-1,self.height-1
                dash_offset: 5
                dash_length: 3
        BoxLayout:#Stock Card
            orientation: "horizontal"
            #size_hint_y: None
            TitleLabel:
                #pos_hint: {'x': .3, 'y': .7}
                #size_hint_y: None
                id:label1
                text: 'Stock Card'
                color: 0, 0, 0, 1
                font_size: 30
                bold: True
                italic: True
                text_size: self.size
                size_hint_x: 0.8   
                halign: 'left'
                valign: 'middle'
                multiline:True
                canvas.after:
                    Color:
                        rgba: 1, 0, 1, 1
                    Line:
                        rectangle: self.x+1,self.y+1,self.width-1,self.height-1
                        dash_offset: 5
                        dash_length: 3               
            SmoothButton:
                #pos_hint: {'x': .3, 'y': .7}
                #size_hint_y: None
                size_hint_x: 0.1
                font_size: 15
                font_name: 'Verdana'
                text:'add'
                on_press: root.add_more()
            Button:
                #pos_hint: {'x': .3, 'y': .7}
                #size_hint_y: None
                size_hint_x: 0.1
                font_size: 15
                font_name: 'Verdana'
                text:'ref'
        BoxLayout: #NewYork Dow
            #orientation: "vertical"
            canvas:
                Color:
                    rgba: (0.5, 0.5, 0.5, 1) # gray
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10, ]
            Label:
                #size_hint_y: None    
                id:label3
                text_size: self.size #指定するとLabelの領域全体が文字の表示領域となります。
                size_hint_y: None
                text: root.newyork
                color: 1, 1, 1, 1
                font_size: 20
                halign: 'left'
                valign: 'middle'       
        BoxLayout: #Nikkei225
            #size_hint_y: None
            orientation: "horizontal"
            canvas:
                Color:
                    rgba: (0.5, 0.5, 0.5, 1) # gray
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10, ]     
            BoxLayout:#Mark
                size_hint_x: 0.2
                orientation: "horizontal"
                Label:
                    #size_hint_y: None
                    size: 100, 100
                    size_hint: None, None
                    Image:
                        source: "yen.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y   
            BoxLayout:#Invest......
                orientation: 'vertical'
                size_hint_x: 0.9 
                Label:
                    #size_hint_y: None
                    text: 'Investment'
                    color: 1, 0, 0, 1
                    font_size: 30
                    halign: 'left'
                    valign: 'middle'
                Label:
                    #size_hint_y: None    
                    id:label3
                    #size_hint_y: None
                    text: root.nikei225
                    color: 1, 1, 1, 1
                    font_size: 20
                    halign: 'left'
                    valign: 'middle'
        BoxLayout: #TotalAsset
            orientation: "horizontal"
            #size_hint_y: None
            canvas:
                Color:
                    rgba: (0.5, 0.5, 0.5, 1) # gray
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10, ]    
            Label:
                #pos_hint:{ 'x': .0,'y':0.0}
                padding: 10.0, 15.0 #左右、上
                spacing: 100, 100 #                    
                id:label4
                size_hint_y: None
                text: root.TotalAsset
                color: 0, 0, 0, 1
                font_size: 20
                #size_hint: 1.0, 0.15
                #pos_hint:{ 'center_x': .5,'center_y': .1}
    #rv: rv
    Widget:
        id: separator
        size_hint_y: None
        height: 20
        canvas:
            Color:
                rgb: 1., 1., 0.
            Rectangle:
                pos: 0, separator.center_y
                size: separator.width, 5
    RecycleView:
        id: rv
        scroll_type: ['bars', 'content']
        scroll_wheel_distance: sp(60) #スクロール速度
        bar_width: sp(20)
        viewclass: 'VariousButtons'
        RecycleBoxLayout:
            default_size: None, sp(80)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(8)
<VariousButtons>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    value: ''
    Button:
        text: root.value
        background_normal: ''
        background_color: 0.5, 0.5, 0.75, 1
        color: 1, 1 ,1 ,1
        on_press: root.on_select_button(self)

