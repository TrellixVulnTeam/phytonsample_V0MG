#(stackcard.kv)
<TitleLabel@Label>:
    #pos_hint_y: None
    font_size: 5
    font_name: 'Verdana'
    canvas.before:
        Color:
            rgba: 0, 1, 0, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30, ]
<AverageLabel@Label>:
    #pos_hint_y: None
    background_color:(0,1,0,1)
    background_normal:''
    font_size: 5
    font_name: 'Verdana'
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10, ]            
<SmoothButton@Button>:
    background_color:(0,0,0,0)
    background_normal:''
    back_color: (0.565, 0.557, 0.698,0.8)
    border_radius:[0,35,0,35]
    #font_name:'verdana'
    canvas.before:
        Color:
            rgba:self.back_color
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:self.border_radius
#Test:
<Test>:
    orientation: 'vertical'
    rv: rv
    BoxLayout: #All Screen
        orientation: "vertical"
        size_hint_y: .45
        canvas.after:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                rectangle: self.x+1,self.y+1,self.width-1,self.height-1
                dash_offset: 5
                dash_length: 3
        BoxLayout:#Stock Card
            orientation: "horizontal"
            #size_hint_y: None
            TitleLabel:
                #pos_hint: {'x': .3, 'y': .7}
                size_hint_y: None
                id:label1
                text: 'Stock Card'
                color: 0, 0, 0, 1
                font_size: 30
                bold: True
                italic: True
                text_size: self.size
                size_hint_x: 0.8   
                halign: 'left'
                valign: 'middle'
                multiline:True
