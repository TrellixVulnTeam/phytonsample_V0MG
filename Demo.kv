
<Button@Button>:
    font_size: 15
    font_name: 'Verdana'

<Label@Label>:
    pos_hint: {'center_x': .5, 'center_y':.5}
    font_size: 15
    font_name: 'Verdana'
    

<TextInput@TextInput>:
    font_size: 15
    font_name: 'Verdana'
    padding_y: 3


<Row>:
    size_hint_y: None
    height: self.minimum_height
    height: 40

    Button:
        text: root.button_text
        size_hint_x: None
        top: 200

    Button:
        text: 'World 1'
        width: 300

<Rows>:
    size_hint_y: None
    height: self.minimum_height
    orientation: "vertical"

User:
    BoxLayout:
        orientation: "vertical"
        padding: 10, 5 #左、上
        ScrollView:
            Rows:
                id: rows


        BoxLayout:
            orientation: "horizontal"
            size_hint_x: .5
            size_hint_y: .35

            padding: 10, 5
            spacing: 10, 10
            #size_hint: .5, .35
            #pos_hint: {'x': .25, 'y':.25}

            Button:
                text: "+Add More"
                on_press: root.add_more()
            Button:
                text: "-Sub More"
                on_press: root.sub_more()    


        BoxLayout:
            orientation: "horizontal"
            padding: 10, 5
            spacing: 10, 10
            size_hint: .5, .35
            pos_hint: {'x': .25, 'y':.25}

            Button:
                text: 'Ok'

            Button:
                text: 'Cancel'
