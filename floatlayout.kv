

<MyuserButton@Button>:
    font_size: 15
    font_name: 'Verdana'

<MyuserLabel@Label>:
    pos_hint: {'center_x': .5, 'center_y':.5}
    font_size: 15
    font_name: 'Verdana'
    

#<User@TextInput>:
#    font_size: 15
##    font_name: 'Verdana'
    padding_y: 3


<Row>:
    orientation: "horizontal"
    size_hint_y: None
    height: self.minimum_height
    height: 60

    Button:
        text: root.button_text
        size_hint_x: 0.1
        #top: 200

    Button:
        text: root.item_value
        size_hint_x: 0.7
        #width: 250

    Button:
        text: root.item_ratio
        #text: 'Changed' if myswitch.active else 'On the switch to change text'
        #text:'hi' if root.x=='1' else 'hello' if root.x=='2' else 'helloworls'
        size_hint_x: 0.2
        background_color: (0,1,0,1)#get_color_from_hex("#83481F")-get_color_from_hex()を用いることで色を16進表記から取得できます。    

<Rows>:
    size_hint_y: None
    height: self.minimum_height
    orientation: "vertical"

user: #書いただけでインスタンスが一つ作られる。
    BoxLayout:#All Screen Area
        orientation: "vertical"
        BoxLayout:#My Futre Area
            orientation: "vertical"
            size_hint: 0.8, 0.1
            pos_hint:{ 'center_x': 0.5}
            padding: 10, 10 #左右、上
            #spacing: 100, 100 #
            canvas.after:
                Color:
                    rgba: .8, .9, 0, 1
                Line:
                    rectangle: self.x+1,self.y+1,self.width-1,self.height-1
                    dash_offset: 5
                    dash_length: 3

            BoxLayout: #StckCard
                orientation: "vertical"
                #size_hint: 1.0, 0.15　
                #pos_hint:{ 'center_x': .5,}
                padding: 0.0, 5.0 #左右、上
                #spacing: 100, 100 #
                canvas.after:
                    Color:
                        rgba: .8, .9, 0, 1
                    Line:
                        rectangle: self.x+1,self.y+1,self.width-1,self.height-1
                        dash_offset: 5
                        dash_length: 3
                MyuserLabel:
                    id:label1
                    text: 'Stock Card'
                    font_size: 30
                    bold: True
                    italic: True
                    text_size: self.size  
                    halign: 'left'
                    valign: 'middle'
                    #multiline:True
                    canvas.before:
                        Color:
                            rgba: .8, .9, 0, 1
                        Line:
                            width: 2
                            rounded_rectangle:self.x,self.y,self.width,self.height,5    
                        Rectangle:
                            pos: self.pos
                            size: self.size
            BoxLayout: #NewYork Dow
                orientation: "vertical"
                #size_hint: 1.0, 0.15　
                #pos_hint:{ 'center_x': .5,}
                padding: 0.0, 5.0 #左右、上
                #spacing: 100, 100 #                
                Label:
                    id:label2
                    text: root.newyork
                    font_size: 20
                    #pos_hint:{ 'center_x': .5,'center_y': .60}
                    canvas.before:
                        Color:
                            rgba: 1, .5, 0, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

            BoxLayout: #Nikkei225
                orientation: "vertical"
                #size_hint: 1.0, 0.15
                #pos_hint:{ 'center_x': .5,}
                padding: 0.0, 5.0 #左右、上
                #spacing: 100, 100 #                   
                Label:
                    id:label3
                    text: root.nikei225
                    font_size: 20
                    #pos_hint:{ 'center_x': .5,'center_y': .35}
                    canvas.before:
                        Color:
                            rgba: 1, .5, 0, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
            BoxLayout: #MyFuture
                orientation: "vertical"
                #size_hint: 1.0, 0.15
                #pos_hint:{ 'center_x': .5,}
                padding: 0.0, 5.0 #左右、上
                #spacing: 100, 100 #                    
                Label:
                    id:label4
                    text: root.TotalAsset
                    font_size: 20
                    size_hint: 1.0, 0.15
                    #pos_hint:{ 'center_x': .5,'center_y': .1}
                    canvas.before:
                        Color:
                            rgba: 1, .5, 0, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
        BoxLayout:#Item Area
            pos_hint:{ 'center_x': 0.5,'top':0.8}
            size_hint: 0.8, 0.3
            orientation: "vertical"
            #padding: 10, 5 #左、上
            ScrollView:
                Rows:
                    id: rows
            BoxLayout:
                orientation: "horizontal"
                size_hint_x: .5
                size_hint_y: .35

                padding: 10, 5
                spacing: 10, 10
                #size_hint: .5, .35
                #pos_hint: {'x': .25, 'y':.25}
                MyuserButton:
                    id: myadd
                    text: "+Add More"
                    background_color: (1,0,0,1)#get_color_from_hex("#83481F")-get_color_from_hex()を用いることで色を16進表記から取得できます。
                    on_press: root.add_more()#roo = user
                MyuserButton:
                    text: "-Sub More"
                    on_press: root.sub_more()    


           
