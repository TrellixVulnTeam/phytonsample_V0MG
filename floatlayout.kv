    BoxLayout:
        orientation: "vertical"
        size_hint: 0.8, 0.3
        pos_hint:{ 'center_x': .5,}
        padding: 10, 10 #左右、上
        spacing: 100, 100 #
        canvas.after:
            Color:
                rgba: .8, .9, 0, 1
            Line:
                rectangle: self.x+1,self.y+1,self.width-1,self.height-1
                dash_offset: 5
                dash_length: 3

        BoxLayout: #StckCard
            orientation: "vertical"
            size_hint: 1.0, 0.3　
            #pos_hint:{ 'center_x': .5,}
            padding: 0.0, 5.0 #左右、上
            #spacing: 100, 100 #
            canvas.after:
                Color:
                    rgba: .8, .9, 0, 1
                Line:
                    rectangle: self.x+1,self.y+1,self.width-1,self.height-1
                    dash_offset: 5
                    dash_length: 3
            Label:
                id:label1
                text: 'root.seconds_string'
                font_size: 50
                bold:True
                valign: 'center'
                halign: 'center'
                canvas.before:
                    Color:
                        rgba: .8, .9, 0, 1
                    Line:
                        width: 2
                        rounded_rectangle:self.x,self.y,self.width,self.height,5    
                    Rectangle:
                        pos: self.pos
                        size: self.size
        BoxLayout: #NewYork Dow
            orientation: "vertical"
            size_hint: 1.0, 0.3
